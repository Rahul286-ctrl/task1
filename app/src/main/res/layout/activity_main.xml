<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="10sp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/civ"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_person_24"
            app:civ_circle_background_color="#C0C0C0"

            />



        <com.google.android.material.textview.MaterialTextView
          android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="default"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_gravity="center_vertical"

            />

<ImageView
    android:layout_width="10dp"
    android:layout_height="10dp"
    android:src="@drawable/rb"
    android:layout_marginLeft="10sp"
    android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timestamp"
            android:textColor="#c0c0c0"
            android:layout_marginLeft="10sp"
            android:layout_gravity="center_vertical"
            />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/imageFilterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_more_vert_24"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="80dp"
            tools:ignore="VectorDrawableCompat"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample"
        android:textColor="#000"
        android:layout_marginTop="10sp"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/image3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ2"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_person_24"
            app:civ_circle_background_color="#C0C0C0"
            />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sub"
            android:layout_toEndOf="@+id/civ2"
            android:textColor="@color/black"
            android:paddingLeft="10sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rahul"
            android:layout_below="@+id/textView3"
            android:layout_toEndOf="@+id/civ2"
            android:textColor="@color/black"
            android:paddingLeft="10sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_play_arrow_24"
            tools:ignore="VectorDrawableCompat"
            android:layout_toEndOf="@+id/textView3"/>

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="9dp"
            android:layout_height="6dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="30sp"
            android:layout_toEndOf="@+id/textView4"
            android:src="@drawable/rb" />
        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="follow"
            android:textColor="#c0c0c0"
            android:layout_marginTop="21sp"
            android:layout_marginLeft="10sp"
            android:layout_toEndOf="@+id/iv4"

            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ3"
            android:layout_width="25dp"
            android:layout_height="26dp"
            android:elevation="15dp"
            android:src="@drawable/thought" />

        <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/civ4"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/blub2"
            android:layout_toEndOf="@+id/civ3"
            android:elevation="15dp"
            />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="31dp"
            android:layout_toEndOf="@+id/civ3"
            android:text="100"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="100 comments"
            android:textColor="@color/black"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:elevation="5dp"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image1"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/book"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informative"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/image1"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/image2"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/comment"
            android:layout_toEndOf="@+id/textView7"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thought"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/image2"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/image3"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/share"
            android:layout_toEndOf="@+id/textView8"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/image3"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>


    </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ5"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_person_24"
        app:civ_circle_background_color="#C0C0C0"
        />
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:layout_toEndOf="@+id/civ5"
        android:textColor="@color/black"
        android:paddingLeft="10sp"
        android:textStyle="bold"/>
        <ImageView
            android:id="@id/iv2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/rb"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="8sp"
            android:layout_toEndOf="@+id/textView10"
            />
        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timestamp"
            android:textColor="#c0c0c0"
            android:layout_toEndOf="@+id/iv2"
            android:layout_marginLeft="10sp"

            />

        <EditText
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sample"
        android:layout_below="@+id/textView10"
        android:layout_toEndOf="@+id/civ5"
        android:textColor="@color/black"
            android:layout_margin="10sp"

            android:inputType="textMultiLine"
            android:background="@drawable/back"
            android:minLines="1"
            android:textSize="13dp"/>

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>